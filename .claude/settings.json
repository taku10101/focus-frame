{
  "model": "sonnet",
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Bash(bun:*)",
      "Bash(bunx:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(gh:*)"
    ],
    "deny": ["Read(./.env)", "Read(./.env.*)", "Bash(rm -rf:*)", "Bash(git push --force:*)"]
  }
}
