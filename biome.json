{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "files": {
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
    "ignore": [
      "*.md",
      "*.json",
      "*.yaml",
      "*.yml",
      "*.toml",
      ".claude/**",
      ".ai-guide/**",
      "node_modules/**",
      ".next/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
